<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_weight="1"
    android:orientation="horizontal"
    tools:context="app.orion.com.popularmovies.ui.MovieDetailsActivity">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/movie_poster"
                android:scaleType="centerCrop" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/imageOverlayBlue"/>
            <ImageView
                android:id="@+id/movie_favourite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="16dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:tint="@color/colorAccent"/>
            <ImageView
                android:id="@+id/movie_play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play_circle_outline_black_24dp"
                android:tint="#c3ffffff"/>
        </RelativeLayout>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:id="@+id/brief_box"
                android:orientation="vertical"
                android:background="#2d2b35"
                android:padding="@dimen/activity_horizontal_margin">
                <View
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:layout_marginBottom="@dimen/vertical_margin_title"
                    android:background="@color/colorAccent"/>
                <TextView
                    android:id="@+id/movie_title"
                    style="@style/DetailTitleLandscape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/movie_release_date"
                    android:layout_marginBottom="8dp"
                    style="@style/DetailTextSmallWhite" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:background="#2d2b35"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/movie_votes_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite_border_black_24dp"
                        android:tint="#797979"
                        android:layout_marginTop="8dp"/>
                    <ImageView
                        android:id="@+id/movie_reviews_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/movie_votes_icon"
                        android:src="@drawable/ic_insert_comment_black_24dp"
                        android:tint="#797979"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/movie_votes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/movie_votes_icon"
                        android:text="2,000 Likes"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="12dp"
                        android:textSize="12sp"
                        android:textColor="#797979"/>
                    <TextView
                        android:id="@+id/movie_reviews_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/movie_reviews_icon"
                        android:layout_below="@id/movie_votes_icon"
                        android:text="Check Reviews"
                        android:layout_marginLeft="8dp"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"
                        android:textColor="#797979"/>
                </RelativeLayout>

                <TextView
                    style="@style/RatingsText"
                    android:layout_centerVertical="true"
                    android:id="@+id/movie_rating" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/synopsis"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_desc"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
