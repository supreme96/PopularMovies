<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingsText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/circle_btn</item>
        <item name="android:layout_margin">@dimen/details_rating_btn_margin</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/details_rating_text_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="DetailTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="DetailTextSmallWhite" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/detail_text_size</item>
    </style>
    <style name="DetailTitleLandscape" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/detail_title_landscape_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="LoadMoreTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">Load More</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="DetailTextMovieHighlights" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/detailTextMovieHighlight</item>
    </style>
</resources>
